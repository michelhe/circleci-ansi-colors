{
    "manifest_version": 3,
    "name": "CircleCI ANSI Colors",
    "description": "Adds ANSI color support to CircleCI's terminal output in the Tests tab",
    "version": "1.0.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "circleci-ansi-colors@example.com",
            "strict_min_version": "109.0"
        }
    },
    "permissions": [],
    "host_permissions": [
        "https://app.circleci.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://app.circleci.com/*"
            ],
            "js": [
                "ansi-to-html.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}